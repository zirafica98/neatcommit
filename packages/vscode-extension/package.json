{
  "name": "neatcommit-vscode",
  "displayName": "NeatCommit",
  "description": "Show NeatCommit analysis results in VS Code (API-based)",
  "version": "0.1.0",
  "engines": { "vscode": "^1.74.0" },
  "categories": ["Linters", "Other"],
  "activationEvents": ["onStartupFinished"],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      { "command": "neatcommit.refresh", "title": "NeatCommit: Load last review" },
      { "command": "neatcommit.analyzeBranch", "title": "NeatCommit: Analyze current branch" }
    ],
    "configuration": {
      "title": "NeatCommit",
      "properties": {
        "neatcommit.apiUrl": { "type": "string", "default": "https://api.neatcommit.com", "description": "NeatCommit API URL" },
        "neatcommit.token": { "type": "string", "default": "", "description": "JWT for API. Get it from the NeatCommit dashboard (user settings / API token)." }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "npm run compile && vsce package --no-dependencies"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.74.0",
    "@vscode/vsce": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {}
}
