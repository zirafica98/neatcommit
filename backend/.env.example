# Environment
NODE_ENV=development
PORT=3000

# Database
# Format: postgresql://user:password@host:port/database
# Za Docker: postgresql://elementer:elementer@localhost:5432/elementer
# Za lokalni PostgreSQL: postgresql://postgres:password@localhost:5432/elementer
DATABASE_URL=postgresql://elementer:elementer@localhost:5432/elementer

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Authentication
# Generišite sa: openssl rand -hex 32
JWT_SECRET=your-super-secret-jwt-key-min-32-characters-long
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-key-min-32-characters-long
JWT_REFRESH_EXPIRES_IN=30d

# GitHub App Configuration
# App ID: Nađite u GitHub App settings (https://github.com/settings/apps)
GITHUB_APP_ID=your-github-app-id

# GitHub Private Key
# Download-ujte .pem fajl sa GitHub App settings i kopirajte ceo sadržaj
# Format: "-----BEGIN RSA PRIVATE KEY-----\n...\n-----END RSA PRIVATE KEY-----"
GITHUB_PRIVATE_KEY="-----BEGIN RSA PRIVATE KEY-----\nYour private key here\n-----END RSA PRIVATE KEY-----"

# GitHub OAuth App (za user login)
# Kreirajte na: https://github.com/settings/developers
GITHUB_CLIENT_ID=your-github-oauth-client-id
GITHUB_CLIENT_SECRET=your-github-oauth-client-secret

# GitHub Webhook Secret
# Generišite random string: openssl rand -hex 20
# Ili postavite u GitHub App webhook settings
GITHUB_WEBHOOK_SECRET=your-webhook-secret

# OpenAI API
# Dobijte sa: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key

# Frontend URL (za CORS)
FRONTEND_URL=http://localhost:4200

# API URL
API_URL=http://localhost:3000
